// SentenciasIterativas-for
for (int i = 0; i < 5; i++) {
    if (i == 0) {
        print("Esta es la primera iteración.");
    } else {
        print("Esta no es la primera iteración.");
    }
}

// SentenciasIterativas-while
int i = 0;

while (i < 10) {
    if (i == 0) {
        print("Esta es la primera iteración.");
    } else {
        print("Esta no es la primera iteración.");
    }

    i++;
}

// SentenciasIterativas-doWhile
int i = 25;

do {
    print("Esta es la única iteración.");

    i++;
} while (i == 0);
